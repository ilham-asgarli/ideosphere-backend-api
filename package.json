{
  "name": "ideosphere",
  "version": "1.0.0",
  "description": "Node.js project.",
  "main": "dist/index.js",
  "keywords": [
    "api",
    "node",
    "typescript",
    "express",
    "sequelize"
  ],
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "npm run clean && tsc",
    "start": "npm run build && node -r dotenv/config dist/index.js",
    "dev": "nodemon -r dotenv/config --exec ts-node src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ilham-asgarli/node.js_ideosphere.git"
  },
  "author": "ILHAM ASGARLI",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ilham-asgarli/node.js_ideosphere/issues"
  },
  "homepage": "https://github.com/ilham-asgarli/node.js_ideosphere#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.1",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "mariadb": "^3.1.1",
    "morgan": "^1.10.0",
    "sequelize": "^6.30.0",
    "uuid": "^9.0.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "jest": {
    "preset": "ts-jest"
  }
